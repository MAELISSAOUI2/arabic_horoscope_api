# .env - Environment Variables for Arabic Horoscope API

# Application Settings
API_TITLE="Arabic Horoscope API"
API_DESCRIPTION="Scientifically-based Arabic horoscope predictions"
API_VERSION="2.0.0"
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# Database Configuration
DATABASE_URL=sqlite:///./horoscope.db
DATABASE_ECHO=false

# For PostgreSQL (uncomment to use)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/horoscope_db

# For MySQL (uncomment to use)
# DATABASE_URL=mysql://user:password@localhost:3306/horoscope_db

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000", "http://127.0.0.1:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000

# Geocoding Configuration
GEOCODING_TIMEOUT=10
GEOCODING_USER_AGENT=arabic_horoscope_api_v2

# Google Maps API (optional, for enhanced geocoding)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Swiss Ephemeris Configuration
EPHEMERIS_PATH=""

# Cache Configuration
CACHE_ENABLED=true
CACHE_EXPIRY_HOURS=24

# Redis Configuration (if using Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=""
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=./logs/app.log

# Time Zone Configuration
DEFAULT_TIMEZONE=UTC

# Email Configuration (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@horoscope-api.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# SSL Configuration (for production)
SSL_CERT_FILE=""
SSL_KEY_FILE=""

# Docker Configuration
DOCKER_MODE=false

# Monitoring (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=8090

# External APIs (optional)
WEATHER_API_KEY=""
NEWS_API_KEY=""

# Development Tools
SQLALCHEMY_WARN_20=1
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1